<com.lesikapk.opengelplus.Cling
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    launcher:drawIdentifier="workspace_portait">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cling">
                <TextView
                    style="@style/ClingTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workspace_cling_title" />
                <TextView
                    style="@style/ClingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/workspace_cling_removed_code" />
                <TextView
                    style="@style/ClingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/workspace_cling_removed_wallpaperpicker" />
                <TextView
                    style="@style/ClingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/workspace_cling_tell_me_bugs" />
			</LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <Button
        style="@style/ClingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="bottom|right"
        android:onClick="dismissWorkspaceCling" />
</com.lesikapk.opengelplus.Cling>
